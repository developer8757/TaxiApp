<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
>


    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginBottom="@dimen/dp_60"
        android:background="@drawable/bg_profile_image_white"
        android:padding="@dimen/dp_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/tvProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_10"
        android:text="Alan Walker"
        android:textColor="@color/md_white_1000"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/ivProfile"
        app:layout_constraintTop_toTopOf="@+id/ivProfile" />

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/ratingRiderDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_6"
        android:isIndicator="true"
        android:maxHeight="@dimen/dp_20"
        android:minHeight="@dimen/dp_20"
        android:progress="2"
        android:stepSize="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/ivProfile"
        app:layout_constraintTop_toBottomOf="@+id/tvProfileName"
        app:mrb_progressTint="@color/colorMustard"
    />


    <ImageView
        android:id="@+id/divider"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_10"
        android:background="@drawable/divider_black_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
    />


</android.support.constraint.ConstraintLayout>