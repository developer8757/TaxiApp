<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <shape android:shape="rectangle">

            <solid android:color="@color/md_black_1000"></solid>
        </shape>


    </item>

    <item android:top="60dp"
          android:bottom="-200dp"
          android:left="10dp"
          android:right="-300dp">
        <rotate
                android:fromDegrees="-20"
                android:pivotX="150%"
                android:pivotY="100%">
            <shape
                    android:shape="rectangle">
                <solid
                        android:color="@color/md_white_1000"/>
            </shape>
        </rotate>
    </item>


    <item


    >

        <bitmap android:src="@drawable/bg_map_blur"></bitmap>

    </item>
</layer-list>